<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ghostwan.pepperremote">

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
            android:name=".SmartRobotServiceApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <service
                android:name=".service.RobotService"
                android:enabled="true"
                android:exported="true">
            <intent-filter>
                <!-- use for starting the service through startService() -->
                <action android:name="com.aldebaran.action.START_ROBOT_SERVICE" />
                <!-- use for binding the service through bindService() -->
                <action android:name="com.aldebaran.action.ROBOT_SERVICE" />
                <action android:name="com.aldebaran.action.ROBOT_SYSTEM_SERVICE" />
                <action android:name="com.aldebaran.action.CLOUD_SERVICE" />
            </intent-filter>
        </service>

        <activity android:name=".ui.launcher.LauncherActivity">
        </activity>
        <activity android:name=".ui.qrcode.QRCodeScannerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>